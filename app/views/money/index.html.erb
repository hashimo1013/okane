<div class = "wrapper">
<%# 
  <div class = "header">
    <div class = "header__text">
      今月
    </div>
  </div> %>


  <div class = "left_bar">
    <div class = "left_bar__head">
    今月分
    </div>
    <div class = "left_bar__sum">
      <div class = "left_bar__sum__chara">
        総支出
      </div>
      <div class = "left_bar__sum__number">
        <%= @prevent_month_sum %>円
      </div>
    </div>
    <div class = "left_bar__data">
      <table>
        <tbody>
          <% @this_month_data.each do |money| %>
          <tr class = "record">
            <td class = "expenses"><%= money.expenses %></td>
            <td><%= money.created_at.strftime("%d日")%></td>
            <td><%= money.tag.tag %></td>
            <td><%= link_to 'Destroy', money, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>

  <div class = "right_bar">
    <div class = "right_bar__prevent_month">
      <div class = "right_bar__prevent_month__titile">
        先月の支出
      </div>
      <div class = "right_bar__prevent_month__sum">
        <%= @prevent_month_sum %>
      </div>      
    </div>
    <div class = "right_bar__tag">
      tag
    </div>
  </div>

</div>